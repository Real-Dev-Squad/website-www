<div data-test='verification-page' class='verification-page'>
  {{#if (eq this.login.userData.profileStatus 'PENDING')}}
    <div data-test='heading-icon' class='verification-page__heading-Icon'>
      <h3 data-test='heading' class='verification-page__heading heading__h3'>
        Pending
      </h3>
      <FaIcon @icon='hourglass-half' @size='lg' class='hourglass-icon' />
    </div>
    <p data-test='description' class='verification-page__description'>
      Refresh to Check Verification Status<br />
      Your Profile Service Linked with Real Dev Squad Service
    </p>
    <div class='verification-page__button'>
      <Reusables::Button
        @text='Refresh'
        @variant='dark'
        @onClick={{@handleRefresh}}
        @test='refresh'
        @type='button'
      />
    </div>
  {{/if}}
</div>
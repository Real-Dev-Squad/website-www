<button
  data-test-button={{@test}}
  class="btn btn-{{@variant}}
    btn-{{@classGenerateUsername}}
    {{if @disabled 'btn-disabled' ''}}"
  type={{@type}}
  disabled={{@disabled}}
  title={{@title}}
  {{on "click" @onClick}}
>
  {{#if @isLoading}}
    <FaIcon @icon="spinner" @size="0.5x" class="fa-spin" />
  {{/if}}
  {{@text}}
</button>
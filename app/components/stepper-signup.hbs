<OnboardingCard>
  <form>
    {{#if (eq this.currentStep 0)}}
      <SignupSteps::StepZero @currentStep={{this.currentStep}} @letsGoHandler={{this.letsGoHandler}} />
    {{else if (eq this.currentStep 1)}}
      <SignupSteps::StepOne @onChange={{this.handleInputChange}} @setUsername={{this.setUsername}}
        @currentStep={{this.currentStep}} />
    {{else if (eq this.currentStep 2)}}
      <SignupSteps::stepTwo @letsGoHandler={{this.letsGoHandler}} />
    {{else if (eq this.currentStep 3)}}
      <JoinSteps::StepOne @letsGoHandler={{this.letsGoHandler}} @setIsPreValid={{this.setIsPreValid}} @isValid={{this.isValid}} @setIsValid={{this.setIsValid}}  />
    {{else if (eq this.currentStep 4)}}
      <JoinSteps::StepTwo @letsGoHandler={{this.letsGoHandler}} @setIsPreValid={{this.setIsPreValid}} @isValid={{this.isValid}} @setIsValid={{this.setIsValid}}  />
    {{else if (eq this.currentStep 5)}}
      <JoinSteps::StepThree @letsGoHandler={{this.letsGoHandler}} @setIsPreValid={{this.setIsPreValid}} @isValid={{this.isValid}} @setIsValid={{this.setIsValid}}  />
    {{else if (eq this.currentStep 6)}}
      <JoinSteps::StepFour @letsGoHandler={{this.letsGoHandler}} @setIsPreValid={{this.setIsPreValid}} @isValid={{this.isValid}} @setIsValid={{this.setIsValid}}  />
    {{/if}}
  </form>

  {{#if (not (or (eq this.currentStep 0) (eq this.currentStep 1) (eq this.currentStep 2)))}}
    <div class='stepper__buttons'>
      {{#if (eq this.currentStep 6)}}
        <Reusables::Button
          @text='Previous'
          @variant='light'
          @onClick={{this.decrementStep}}
          @test='prev'
          @type='button'
        />
        <Reusables::Button
          @text='Submit'
          @variant='dark'
          @onClick={{this.letsGoHandler}}
          @test='submit'
          @type='button'
        />
      {{else}}
        <Reusables::Button
          data-test-prev-btn
          @text='Previous'
          @variant='light'
          @onClick={{this.decrementStep}}
          @test='prev'
          @type='button'
        />
        <Reusables::Button
          data-test-next-btn
          @text={{if (eq this.currentStep 5) 'Preview' 'Next'}}
          @variant='dark'
          @disabled={{if (or this.preValid this.isValid) false true}}
          @onClick={{this.incrementStep}}
          @test='next'
          @type='submit'
        />
      {{/if}}
    </div>
  {{/if}}
</OnboardingCard>